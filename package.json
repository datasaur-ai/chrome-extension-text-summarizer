{
  "name": "text-summarizer",
  "version": "1.0.0",
  "description": "Chrome extension for text summarization",
  "scripts": {
    "build": "webpack --config webpack.config.ts --mode production",
    "dev": "rm -rf ./dist && webpack --config webpack.config.ts --mode development --watch",
    "analyze": "ANALYZE=true webpack --config webpack.config.ts --mode production",
    "type-check": "tsc --noEmit",
    "lint": "eslint 'src/**/*.{js,ts}'",
    "format": "prettier --write 'src/**/*.{js,ts,json,scss}'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "jest -c jest.config.e2e.ts",
    "clean": "rimraf dist",
    "ci": "npm run type-check && npm run lint && npm run test:coverage && npm run build"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@types/chrome": "^0.0.306",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.5",
    "@types/webpack-bundle-analyzer": "^4.7.0",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "autoprefixer": "^10.4.20",
    "copy-webpack-plugin": "^13.0.0",
    "css-loader": "^7.1.2",
    "css-minimizer-webpack-plugin": "^7.0.0",
    "eslint": "^9.21.0",
    "html-webpack-plugin": "^5.6.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "mini-css-extract-plugin": "^2.9.2",
    "postcss": "^8.5.3",
    "postcss-loader": "^8.1.1",
    "postcss-preset-env": "^10.1.5",
    "prettier": "^3.5.2",
    "puppeteer": "^24.3.0",
    "rimraf": "^6.0.1",
    "sass": "^1.85.1",
    "sass-loader": "^16.0.5",
    "terser-webpack-plugin": "^5.3.12",
    "ts-jest": "^29.2.6",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "webpack": "^5.98.0",
    "webpack-bundle-analyzer": "^4.10.2",
    "webpack-cli": "^6.0.1"
  }
}